.article_card {
  margin-top: 2.5vw;
  margin-bottom: 2.5vw;
  padding: 10rpx;
  width: 100%;
  height: 130px;
  border-radius: 10px;
  box-shadow: 0px 4px 12px 0px rgba(111, 143, 234, 0.4), 0px 2px 2px 0px rgba(111, 143, 234, 0.08);
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  background-color: #fff;
}
.article_card .article_text {
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #9797a8;
  line-height: 20px;
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 3;
  /*要显示的行数*/
  -webkit-box-orient: vertical;
}
.article_card .dn_part {
  height: 40px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 5px;
}
.article_card .dn_part .auth {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: nowrap;
}
.article_card .dn_part .auth image {
  border-radius: 50%;
  height: 20px;
  width: 20px;
}
.article_card .dn_part .auth .auth_name {
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #9797a8;
  line-height: 20px;
}
.article_card .dn_part .like {
  color: #cdcdd1;
  font-size: 14px;
}
