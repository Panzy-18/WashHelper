page {
  background: #f5f6fa;
}
.bar_wrap {
  float: left;
}
.bar_wrap cu-custom view {
  color: #fff;
}
.substrate {
  border-style: hidden;
  width: 100%;
  height: 182px;
  background: linear-gradient(135deg, #6f8fea 0%, #474ad9 100%);
  border-radius: 0px 0px 0px 128rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.substrate .search_wrap {
  display: flex;
  padding-top: 120rpx;
  width: 100%;
  flex-wrap: nowrap;
  align-items: center;
}
.substrate .search_wrap .search_input {
  width: 90%;
}
.substrate .search_wrap .icon_wrap {
  align-items: center;
}
.ex_wrap .article_list {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.ex_wrap .article_list .article_wrap {
  margin-top: 2.5vw;
  margin-bottom: 2.5vw;
  width: 90%;
  height: 180px;
  border-radius: 10px;
  box-shadow: 0px 4px 12px 0px rgba(111, 143, 234, 0.4), 0px 2px 2px 0px rgba(111, 143, 234, 0.08);
}
.ex_wrap .kongbai {
  height: 30px;
  opacity: 0;
}
