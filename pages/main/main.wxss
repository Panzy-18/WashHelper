page {
  background: #f5f6fa;
}
.bar_wrap {
  float: left;
}
.bar_wrap cu-custom view {
  color: #fff;
}
.substrate {
  width: 100%;
  height: 364rpx;
  background: linear-gradient(135deg, #6f8fea 0%, #474ad9 100%);
  border-radius: 0px 0px 0px 128rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.substrate .search_wrap {
  display: flex;
  padding-top: 80rpx;
  width: 100%;
  flex-wrap: nowrap;
  align-items: center;
}
.substrate .search_wrap .search_input {
  width: 90%;
}
.substrate .search_wrap .icon_wrap {
  align-items: center;
}
.address_wrap {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
}
.address_wrap .address_text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #82829e;
  line-height: 24px;
}
.address_wrap .address_change {
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #6f8fea;
  line-height: 20px;
}
.weather_wrap {
  display: flex;
  padding-left: 50rpx;
  padding-right: 50rpx;
  justify-content: space-between;
  flex-direction: row;
  flex-wrap: nowrap;
  width: 100%;
  height: 128px;
  background: #ffffff;
  box-shadow: 4px 16px 48px -8px rgba(111, 143, 234, 0.16), 2px 6px 16px -10px rgba(111, 143, 234, 0.1);
  border-radius: 8px 64px 8px 8px;
}
.weather_wrap .weather_index {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 200rpx;
}
.weather_wrap .weather_index .weather_index_text {
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #2f2f51;
  line-height: 20px;
}
.weather_wrap .weather_index .weather_index_value {
  display: flex;
  flex-direction: row;
  font-size: 25px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #474ad9;
  line-height: 42px;
}
.weather_wrap .weather_index .weather_index_value .icon1 {
  margin-left: 9px;
  font-size: 8px;
  color: #999;
}
.weather_wrap .weather_index .weather_index_value .btn {
  position: absolute;
  width: 180rpx;
  height: 42px;
  opacity: 0.3;
}
.weather_wrap .weather_state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 200rpx;
}
.weather_wrap .weather_state image {
  width: 168rpx;
  height: 132rpx;
}
.weather_wrap .weather_state .weather_state_description {
  font-size: 11px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #9797a8;
  line-height: 20px;
}
.weather_wrap .weather_state .weather_state_t {
  font-size: 22px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #2f2f51;
  line-height: 30px;
}
.tabs_wrap {
  margin-top: 25px;
}
.tabs_wrap .ques_wrap {
  margin-top: 60rpx;
}
